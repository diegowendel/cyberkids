<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="30dp">

        <ImageView android:id="@+id/sadEmoji"
                   android:layout_width="120dp"
                   android:layout_height="120dp"
                   android:layout_gravity="center"
                   android:src="@drawable/sad_emoji"/>

        <TextView android:id="@+id/dialogText"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Acabaram as chances!"
                  android:textColor="@color/white"
                  android:textSize="20sp"
                  android:layout_gravity="center"
                  android:layout_margin="20dp"/>

        <Button android:id="@+id/buttonTryAgain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentar denovo"
                android:textColor="@color/oil"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"/>
</LinearLayout>
